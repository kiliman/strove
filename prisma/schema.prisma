generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String
  role           Role     @default(USER)

  notes Note[]
  votes Vote[]
}

model Text {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  body      String

  notes Note[]
}

model Note {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  start Int
  end       Int
  body      String

 user   User   @relation(fields: [userId], references: [id])
  userId String
  text   Text   @relation(fields: [textId], references: [id])
  textId String
  votes Vote[]
}

enum Direction {
  UP
  DOWN
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  direction Direction

  note   Note   @relation(fields: [noteId], references: [id])
  noteId String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
