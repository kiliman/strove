{
  "name": "strove",
  "private": true,
  "scripts": {
    "build": "npm run build:prisma && npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles.css",
    "build:prisma": "npm run prisma migrate deploy",
    "clean": "git clean --interactive -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:css": "tailwindcss -o ./app/styles.css --watch",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "fix": "run-s fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore .",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:typescript": "tsc",
    "postinstall": "remix setup node && metronome setup",
    "prepare": "husky install",
    "prisma": "prisma",
    "routes-gen": "routes-gen -d @routes-gen/remix"
  },
  "nano-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@kripod/uuidv7": "^0.2.3",
    "@node-rs/bcrypt": "^1.6.0",
    "@prisma/client": "^3.10.0",
    "@remix-run/react": "^1.2.1",
    "@remix-run/vercel": "^1.2.1",
    "@splitbee/node": "^0.3.1",
    "@splitbee/web": "^0.3.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "inspx": "^0.0.1-alpha.6",
    "match-sorter": "^6.3.1",
    "metronome-sh": "^1.0.2",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-confetti": "^6.0.1",
    "react-dom": "^17.0.2",
    "react-polymorphic-types": "^2.0.0",
    "remix": "^1.2.1",
    "routes-gen": "^0.3.0",
    "string-similarity": "^4.0.4",
    "tailwindcss": "^3.0.23",
    "tiny-invariant": "^1.2.0",
    "unstated-next": "^1.1.0",
    "web-api-hooks": "^3.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.1",
    "@remix-run/eslint-config": "^1.2.1",
    "@remix-run/serve": "^1.2.1",
    "@routes-gen/remix": "^0.2.10",
    "@tsconfig/remix": "^1.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-etc": "^2.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "nano-staged": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "prisma": "^3.9.2",
    "typescript": "^4.5.5"
  }
}
