{
  "name": "strove",
  "private": true,
  "scripts": {
    "build": "npm run prisma migrate deploy && npm run prisma db seed && npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles.css",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:css": "tailwindcss -o ./app/styles.css --watch",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "fix": "run-s fix:*",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:typescript": "tsc",
    "postinstall": "remix setup node",
    "prisma": "prisma"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@node-rs/bcrypt": "^1.5.5",
    "@prisma/client": "^3.7.0",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "tailwindcss": "^3.0.8",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@tsconfig/remix": "^1.0.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^3.0.0",
    "concurrently": "^6.5.1",
    "dotenv": "^10.0.0",
    "esbuild-register": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.6",
    "prisma": "^3.7.0",
    "typescript": "^4.5.4"
  }
}
