{
	"name": "strove",
	"private": true,
	"scripts": {
		"build": "npm run prisma migrate deploy && npm run build:css && remix build",
		"build:css": "tailwindcss -o ./app/styles/tailwind.css",
		"clean": "git clean --force -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
		"dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
		"dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
		"dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path ./.gitignore .",
		"lint:prettier": "prettier --check --ignore-path ./.gitignore .",
		"lint:typescript": "tsc",
		"postinstall": "remix setup node",
		"prisma": "prisma",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"prisma": {
		"seed": "node --require esbuild-register prisma/seed.ts"
	},
	"dependencies": {
		"@headlessui/react": "^1.4.2",
		"@heroicons/react": "^1.0.5",
		"@prisma/client": "^3.6.0",
		"@remix-run/react": "^1.0.6",
		"@remix-run/serve": "^1.0.6",
		"@remix-run/vercel": "^1.0.6",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.4.0",
		"@tailwindcss/line-clamp": "^0.3.0",
		"@tailwindcss/typography": "^0.5.0",
		"chalk": "^4.1.2",
		"marked": "^4.0.7",
		"md5-hash": "^1.0.1",
		"nprogress": "^0.2.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"remix": "^1.0.6",
		"tailwindcss": "^3.0.1",
		"zod": "^3.11.6"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.0.6",
		"@types/marked": "^4.0.1",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^17.0.24",
		"@types/react-dom": "^17.0.9",
		"@types/tailwindcss": "^2.2.4",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"concurrently": "^6.4.0",
		"dotenv": "^10.0.0",
		"esbuild-register": "^3.2.0",
		"eslint": "^8.3.0",
		"eslint-config-airbnb": "^19.0.1",
		"eslint-config-airbnb-typescript": "^16.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-etc": "^2.0.1",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-etc": "^2.0.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-tailwindcss": "^1.17.2",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.0",
		"prisma": "^3.6.0",
		"typescript": "^4.1.2"
	}
}
