{
	"compilerOptions": {
		"target": "ES2019",
		"lib": ["DOM", "DOM.Iterable", "ES2019"],
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		}
	},
	"include": [
		"*.config.js",
		"api/index.js",
		"remix-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}
