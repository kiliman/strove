{
  "extends": "@tsconfig/remix/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app/",
    "paths": {
      "~/*": [
        "*"
      ],
      "*": [
        ""
      ]
    },
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "api",
    "node_modules/"
  ]
}