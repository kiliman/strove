{
  "extends": "@tsconfig/remix/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app/",
    "paths": { "~/*": ["*"], "*": [""] },
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "*.config.js",
    "api/index.js",
    "remix-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/routes/.theme.tsx"
  ],
  "exclude": ["node_modules"]
}
